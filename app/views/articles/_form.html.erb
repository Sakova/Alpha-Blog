<% if @article.errors.any? %>
  <h2>The following errors are accrued</h2>
  <% @article.errors.full_messages.each do |msg| %>
    <%= msg %> <br>
  <% end %>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  <%= f.submit %>
<% end %>
