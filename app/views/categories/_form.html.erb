<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info bg-opacity-50 rounded", local: true) do |f| %>
  <div class="form-group row mb-3">
    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a category" %>
    </div>
  </div>

  <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
    <%= f.submit class: "btn btn-outline-light btn-lg" %>
  </div>
<% end %>
